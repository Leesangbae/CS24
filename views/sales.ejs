    <script>
      window.onload = function(){
        $.ajax({
          url : "sales",
          type : "post",
          dataType : 'json',
          async : true,
          success : function(results){
            for(var i = 0; i < results.length; i++){
              var insertTr = "";

              insertTr += "<tr class='table_data'>";
              insertTr += "<td>" + results[i].salesdate + "</td>";
              insertTr += "<td>" + results[i].salesprice +"</td>";
              insertTr += "<td>" + results[i].salesproduct + "</td>";
              insertTr += "</tr>";

